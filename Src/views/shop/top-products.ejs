
<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (products.length > 0) { %>
            <div class="grid">
                <% products.forEach(function(product){ %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">
                                <%= product.name %>
                            </h1>
                        </header>
                        
						<div class="card__image">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <p>Rating: <%= product.rating %></p>
                            <h2 class="product__price">$<%= product.price - product.discount %></h2>
                            <% if (product.discount !== '0') { %>
                                <p class="centered"><strong><%= product.price %> - <%= product.discount %></strong></p>
                            <% } %>
                            <br />
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product.productID %>" class="btn">Details</a>
                        </div>
                       
                    </article>
                <% }) %>
            </div>
            
            
        <% } else { %>
            <h1>No Top Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>




